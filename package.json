{
  "//": [
    "================================================================================",
    "# To work within the development environment, run the following tasks",
    "  1. $ npm run dev",
    "  2. $ npm run serve",
    "  3. Go to http://localhost:3001",
    "================================================================================"
  ],
  "name": "@alaskaairux/auro-datetime",
  "version": "1.0.0",
  "description": "Auro custom auro-datetime element",
  "author": "Product design and research",
  "repository": {
    "type": "git",
    "url": "https://github.com/AlaskaAirlines/auro-datetime"
  },
  "main": "index.js",
  "license": "Apache-2.0",
  "dependencies": {
    "lit-element": "^2.4.0",
    "chalk": "^4.1.0"
  },
  "peerDependencies": {
    "@webcomponents/webcomponentsjs": "^2.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/runtime": "^7.12.5",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@open-wc/testing": "^2.5.32",
    "@open-wc/testing-karma": "^4.0.9",
    "@polymer/iron-demo-helpers": "^3.1.0",
    "@polymer/polymer": "^3.3.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/npm": "^7.0.6",
    "@webcomponents/webcomponentsjs": "^2.5.0",
    "babel-loader": "^8.1.0",
    "compression": "^1.7.4",
    "concat": "^1.0.3",
    "copy-webpack-plugin": "^6.3.0",
    "copyfiles": "^2.4.0",
    "core-js": "^3.6.5",
    "eslint": "^7.12.1",
    "eslint-plugin-lit": "^1.2.4",
    "husky": "^4.3.0",
    "lodash": "^4.17.20",
    "marked": "^1.2.2",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "semantic-release": "^17.2.2",
    "sinon": "^9.2.1",
    "web-component-analyzer": "^1.1.6",
    "webpack": "^5.4.0",
    "webpack-bundle-analyzer": "^3.9.0",
    "webpack-cli": "^4.1.0",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.3.0"
  },
  "browserslist": [
    "last 2 version",
    "> 15% in US",
    "not IE 10",
    "not IE_Mob 10",
    "not IE_Mob 11"
  ],
  "scripts": {
    "build": "npm run ciBuild",
    "apiBuild": "wca analyze 'src/auro-datetime.js' --outFiles docs/api.md",
    "bundler": "webpack --mode=production",
    "bundle:test": "webpack-dev-server --host 0.0.0.0",
    "postinstall": "node packageScripts/postinstall.js",
    "distJS": "copyfiles -u 1 -V './src/**/*.js' ./dist",
    "sweep": "rm -rf ./temp ./demo/css ./demo/fonts ./dist ./src/tokens | rm ./src/*.css ./src/*-css.js",
    "esLint": "./node_modules/.bin/eslint src/auro-*.js",
    "test": "karma start --coverage",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "test:ci": "npm-run-all test lint",
    "ciBuild": "npm-run-all distJS bundler postinstall apiBuild",
    "serve": "polymer serve --port 3001 --hostname 0.0.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all test esLint bundler postinstall",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "entry",
          "corejs": "3.0.0"
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-syntax-dynamic-import",
      [
        "@babel/plugin-transform-runtime",
        {
          "regenerator": true
        }
      ]
    ]
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "./CHANGELOG.md",
          "changelogTitle": "# Semantic Release Automated Changelog"
        }
      ],
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "./CHANGELOG.md",
            "package.json"
          ]
        }
      ],
      "@semantic-release/github"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "alaska airlines",
    "auro",
    "design system",
    "web components"
  ]
}
